{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Typechecking
    "strict": true,
    "skipLibCheck": true,

    // Compatibility
    "esModuleInterop": true
  },
  "include": ["src"]
}
